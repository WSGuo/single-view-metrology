img = imread('painting.jpg');
I = flipdim(img ,1);
[height,width,chn] = size(img);
w = (height+width)/2;
image(I);
set (gcf, 'WindowButtonMotionFcn', @mouseMove);
set(gca,'YDir','normal')

% calculate the vanishing point
x_p = [[[0,1,w],[1,1,w]];[[1,2,w],[2,2,w]]];
y_p = [[[533,360,w],[481,5,w]];[[1363,5,w],[1001,231,w]]];
z_p = [[[0,1,w],[0,2,w]];[[1,1,w],[1,2,w]]];


x_vpt = vanishingPT(x_p);
y_vpt = vanishingPT(y_p);
z_vpt = vanishingPT(z_p);

% specify reference plane
